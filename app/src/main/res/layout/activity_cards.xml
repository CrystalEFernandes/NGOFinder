<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cards">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BF64C94B"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/welcometxt"
            android:layout_width="261dp"
            android:layout_height="132dp"
            android:fontFamily="@font/bungee"
            android:paddingLeft="20dp"
            android:text="SWIPE TO REGISTER"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/logoimg"
            android:layout_width="186dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>
<com.wenchao.cardstack.CardStack
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:padding="10dp"
    app:card_enable_loop="true"
    app:card_enable_rotation="true"
    app:card_gravity="top"
    app:card_margin="10dp"
    app:card_stack_size="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BF64C94B"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:fontFamily="@font/bungee"
            android:text="\nREJECT&lt;----SWIPE----&gt;APPLY"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="22sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>