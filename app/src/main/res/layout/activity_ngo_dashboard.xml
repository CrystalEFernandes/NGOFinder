<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ngo_dashboard">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-20dp"
        android:scaleX="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse_1" />

    <ImageView
        android:id="@+id/imageView111"
        android:layout_width="189dp"
        android:layout_height="0dp"
        android:layout_marginStart="-20dp"

        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ellipse_1" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="416dp"
        android:layout_height="897dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logoimg"
            android:layout_width="186dp"
            android:layout_height="120dp"
            android:layout_marginStart="-20dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/welcometxt"
            android:layout_width="367dp"
            android:layout_height="132dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/bungee"
            android:text="Find your perfect NGO"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="-10dp"
            android:text="Scroll To Explore"
            android:textColor="#64C94B"
            android:textSize="18sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recview"
            android:layout_width="409dp"
            android:layout_height="310dp"
            android:background="#BF64C94B"
            android:paddingTop="20dp"
            android:paddingRight="-10dp"
            android:paddingLeft="-10dp"
            android:layout_gravity="center"
            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/vision" />

        <TextView
            android:id="@+id/visiontxt"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Our Vision: To empower communities and individuals to create a sustainable future."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/mission" />

        <TextView
            android:id="@+id/missiontxt"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Our Mission: To connect people with the right NGOs and inspire them to make a positive impact on the world."
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>